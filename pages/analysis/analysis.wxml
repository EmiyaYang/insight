<view class="page-content">
    <!--头部概览模块 start-->
    <view class='header'>
        <!--分数圆形画布 以及 上面的分数 start-->
        <canvas class="cir outline-item" canvas-id="canvasArc">
            <cover-view>
                {{outline.point}}
            </cover-view>
        </canvas>
        <!--分数圆形画布 以及 上面的分数 end-->
         <!--应用 start-->
        <view class='outline-item'>
            <text>应用</text>
            <text>{{outline.appNum}}</text>
        </view>
         <!--应用 end-->
         <!--异常 start-->
        <view class='outline-item'>
            <text>异常</text>
            <text>{{outline.exceptionNum}}</text>
        </view>
        <!--异常 end-->
         <!--历史异常导航 start-->
        <navigator class='view-history' url="../analysis-history/analysis-history" hover-class="navigator-hover">
            查看历史异常>>
        </navigator>
         <!--历史异常导航 end-->
    </view>
    <!--头部概览模块 end-->
     <!--首页收藏部分 start-->
    <view class="collect-list">
        <view class="title">收藏</view>
         <!--收藏图表 start-->
        <scroll-view scroll-x>
            <view class="card" wx:for="{{collectList}}" wx:key="collect-{{index}}">{{item.name}}</view>
        </scroll-view>
         <!--收藏图表 end-->
    </view>
     <!--首页收藏部分 end-->

    <!--异常信息模块 start-->
    <navigator id="body"
               wx:for="{{exceptionList}}"
               wx:key='app-{{index}}'
               class="app-item-container"
               hover-class="app-item-hover"
               url="../monitor-appinfo-diagram/monitor-appinfo-diagram"
               data-index="{{index}}">
          
        <view class='app-item'>
            <text class='title'>{{item.name}}</text>
            <image  class='enter' src='../../img/common/svgs/arrow_right.svg'></image>

            <view class='tag'>
                <text>{{item.source}}</text>
            </view>
        </view>
    </navigator>
    <!--异常信息模块 end-->

     <!--加载动画 start-->
    <view class="loading-hinder {{ifLoading ? '' : 'hidden'}}" >Loading...</view>
     <!--加载动画 end-->
</view>