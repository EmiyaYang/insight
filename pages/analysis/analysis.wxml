<!--logs.wxml-->
<!--模块1 异常数，异常历史，总分数-->
<scroll-view class='container' bindscroll="scroll" scroll-into-view="{{toView}}" scroll-with-animation scroll-y>
    <!--头部概览模块 130px高 start-->
    <view id="header" class='header' style="height:{{headerHeight}}">
        <view class='outline-item'>
            <canvas class="cir" canvas-id="canvasArc">
                <cover-view>
                    {{outline.point}}
                </cover-view>
            </canvas>
        </view>

        <view class='outline-item'>
            <text>应用数</text>
            <text>{{outline.appNum}}</text>
        </view>

        <view class='outline-item'>
            <text>异常数</text>
            <text>{{outline.exceptionNum}}</text>
        </view>

        <navigator class='view-history' url="../analysis-history/analysis-history" hover-class="navigator-hover">
            查看历史异常>>
        </navigator>
    </view>
    <!--头部概览模块 end-->

    <view id="btn" class="fixedBtn {{ifFixedBtnShow ? '' : 'hidden'}}}" bindtap="backToTop">
        <text>TOP ∧</text>
    </view>

    <!--模块2 异常信息*/-->
    <view   id="body"
            wx:for="{{exceptionList}}"
            wx:key='app-{{index}}'
            class="app-item-container"
            bindtap='onTapGroup'
            data-index="{{index}}">
        <view class='app-item'>
            <text class='title'>{{item.name}}</text>
            <navigator class='enter' url="../monitor-appinfo-diagram/monitor-appinfo-diagram">
                <image src='../../img/svgs/arrow_right.svg'></image>
            </navigator>
            <view class='tag'>
                <text>{{item.source}}</text>
            </view>
        </view>
    </view>
    <!--模块2 异常信息*/-->

</scroll-view>