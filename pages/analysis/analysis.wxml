<!--logs.wxml-->
<!--模块1 异常数，异常历史，总分数-->
<view class='page-content' style='height:{{windowHeight}}px'>
  <view class='header'>
    <view class='outline-item'>
      <canvas class="cir" canvas-id="canvasArc">
        <cover-view>
          {{outline.point}}
        </cover-view>
      </canvas>
    </view>    

    <view class='outline-item'>
      <text>应用数</text>
      <text>{{outline.appNum}}</text>
    </view>

    <view class='outline-item'>
      <text>异常数</text>
      <text>{{outline.exceptionNum}}</text>
    </view>

    <navigator class='view-history' url="../analysis-history/analysis-history" hover-class="navigator-hover">查看历史异常>></navigator>
  </view>

  <view class='body'>
    
    <!--模块2 异常信息*/-->
    <scroll-view style='height:{{windowHeight-130}}px' scroll-y>
      <view wx:for="{{list}}" wx:key='app-{{index}}' class="app-item-container {{item.flag?'collapsed':'open'}}">
        <view class='app-item' bindtap='onTapGroup' data-index="{{index}}">
          <text>{{item.groupName}}</text>
          <image class="{{item.flag?'collapsed':'open'}}" src='../../img/svgs/arrow_right_fill.svg'></image>
        </view>
        <view hidden='{{item.flag}}'>
          <view class='exception-item' wx:for="{{item.exceptions}}" wx:key='exception-{{index}}'> 
            <text>- {{item}}</text>
          </view>
        </view>
      </view>
    </scroll-view> <!--模块2 异常信息*/-->

  </view><!-- .body --> 

</view>